{
    "compilerOptions": {
        "target": "es2019",
        "module": "commonjs",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "lib": ["es2020"],
        "declaration": true,
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "rootDir": "src",
        "outDir": "./dist",
        "sourceMap": false,
        "inlineSourceMap": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/*.ts"
    ],
    "typedocOptions": {
        "entryPoints": ["src/index.ts"],
        "out": "apidoc",
        "excludePrivate": true,
    }
}